// custom keybindings
// https://code.visualstudio.com/api/references/commands

[
    // open debug
    {
      "key": "ctrl+k d",
      "command": "workbench.view.debug"
    },
    // create a new file ( needed in code-server since default behavior is a browser mapping )
    {
      "key": "ctrl+k n",
      "command": "workbench.action.files.newUntitledFile"
    },
    {
      "key": "ctrl+k s", 
      "command": "workbench.action.tasks.runTask",
      "args": "open_ssh_config_settings_in_HOME"
  }
]